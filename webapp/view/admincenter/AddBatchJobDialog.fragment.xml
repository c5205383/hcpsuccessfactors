<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="{i18n>admincenter-fragment-title}" resizable="true" contentWidth="550px" contentHeight="300px">
		<List>
			<InputListItem label="{i18n>admincenter-page-batchjob-name}">
				<Input id="bjdialog-ipt-name" value="{NewBatchJob>/name}" editable="true" design="Bold" width="350px" />
			</InputListItem>
			<InputListItem label="{i18n>admincenter-page-batchjob-object}">
				<Select items="{path:'BatchJobObjects>/objects'}" selectedKey="{NewBatchJob>/type}" forceSelection="false" width="350px">
					<items>
						<core:Item key="{BatchJobObjects>key}" text="{BatchJobObjects>key}" />
					</items>
				</Select>
			</InputListItem>
			<InputListItem label="{i18n>admincenter-page-batchjob-interval}">
				<Select selectedKey="{NewBatchJob>/interval}" items="{path:'BatchJobObjects>/interval'}" forceSelection="false" width="350px">
					<items>
						<core:Item key="{BatchJobObjects>key}" text="{BatchJobObjects>text}" />
					</items>
				</Select>
			</InputListItem>
			<InputListItem label="{i18n>admincenter-page-batchjob-description}">
				<Input value="{NewBatchJob>/info}" editable="true" design="Bold" width="350px" />
			</InputListItem>
			<InputListItem label="{i18n>admincenter-page-batchjob-status}" visible="false">
				<Select selectedKey="{NewBatchJob>/status}" forceSelection="false" width="350px">
					<items>
						<core:Item key="true" text="active" />
						<core:Item key="false" text="inactive" />
					</items>
				</Select>
			</InputListItem>
			<InputListItem label="{i18n>admincenter-page-batchjob-owner}">
				<Input value="{NewBatchJob>/owner}" editable="false" design="Bold" width="350px" />
			</InputListItem>
		</List>
		<beginButton>

		</beginButton>
		<buttons>
			<Button text="Save" press="onDialogSelectOk" />
			<Button text="Run" press="onDialogSelectOk" />
			<Button text="Cancel" press="onDialogClose" type="Reject" />
		</buttons>
		<endButton>

		</endButton>
	</Dialog>
</core:FragmentDefinition>