<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="hcpsuccessfactors.controller.user.users"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="User" showNavButton="true" navButtonPress="onNavBack">
		<content>
			<Table id="idUsersTable" inset="false" items="{
			path: 'AllUsers>/',
			sorter: {
				path: 'object/userId'
			}
		}">
				<headerToolbar>
					<Toolbar>
						<SearchField liveChange="onSearch" width="100%"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column width="12em">
						<Label text="User Id" design="Bold"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Label text="User Name" design="Bold"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Label text="Full Name" design="Bold"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Label text="Department" design="Bold"/>
					</Column>
					<Column hAlign="Right">
						<Label text="Email" design="Bold"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{AllUsers>object/userId}" />
							<Text text="{AllUsers>object/username}" />
							<Text text="{AllUsers>object/defaultFullName}" />
							<Text text="{AllUsers>object/department}" />
							<Text text="{AllUsers>object/email}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</core:View>