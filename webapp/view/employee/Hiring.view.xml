<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout" controllerName="hcpsuccessfactors.controller.employee.Hiring"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="{i18n>hiring-page-title}">
				<content>
					<Table width="100%" id="hiringtable" items="{path:'/'}">
						<headerToolbar>
							<OverflowToolbar design="Transparent">
								<Title text="{i18n>hiring-employee-list-title}" />
								<ToolbarSpacer />
								<Button icon="sap-icon://add" type="Transparent" press="onAddPressed">
									<layoutData>
										<OverflowToolbarLayoutData priority="NeverOverflow" />
									</layoutData>
								</Button>
								<Button icon="sap-icon://display" type="Transparent" press="handleResponsivePopoverPress">
									<layoutData>
										<OverflowToolbarLayoutData priority="NeverOverflow" />
									</layoutData>
								</Button>
							</OverflowToolbar>
						</headerToolbar>
						<columns>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="{i18n>hiring-userId}" wrapping="false" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="{i18n>hiring-username}" wrapping="false" />
							</Column>

							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="{i18n>hiring-personIdExternal}" wrapping="false" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="{i18n>hiring-defaultFullName}" wrapping="false" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="{i18n>hiring-gender}" wrapping="false" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="{i18n>hiring-company}" wrapping="false" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="{i18n>hiring-jobCode}" wrapping="false" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="{i18n>hiring-startDate}" wrapping="false" />
							</Column>
							<Column>
								<Text text="{i18n>hiring-action}" wrapping="false" />
							</Column>
						</columns>
						<items>
							<ColumnListItem vAlign="Middle">
								<cells>
									<Text text="{userId}" wrapping="false" />
									<Text text="{username}" wrapping="false" />

									<Text text="{personIdExternal}" wrapping="false" />
									<Text text="{firstName}, {lastName}" wrapping="false" />
									<Text text="{gender}" wrapping="false" />
									<Text text="{company}" wrapping="false" />
									<Text text="{jobCode}" wrapping="false" />
									<Text text="{startDate}" wrapping="false" />
									<Button icon="sap-icon://delete" press="onRemovePressed" />
								</cells>
							</ColumnListItem>
						</items>
					</Table>
					<!--</l:VerticalLayout> -->
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer />
						<Button text="Submit" type="Accept" press="onSubmitData" />
						<Button text="Save" type="Reject" press="onBack" />
						<Button text="Cancel" press="onCancel" />
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>