<mvc:View id="myGoalView" xmlns:core="sap.ui.core" controllerName="hcpsuccessfactors.controller.detail.goal.myGoal" xmlns="sap.m" xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc">
	<Page title="{i18n>mygoal-title}" showNavButton="{device>system/phone}" navButtonPress="onNavBack">
		<content>
			<List id="invoiceList" class="sapUiResponsiveMargin" width="auto"
				items="{ path : 'GoalModel>/goals', sorter : { path : 'name'} }">
				<headerToolbar>
					<Toolbar>
						<Title text="{i18n>GoalListTitle}"/>
						<ToolbarSpacer/>
						<Select id="planSelect" selectedKey="1" change="onSelectKeyChange" items="{path:'GoalPlanModel>/list'}">
							<items>
								<core:Item key="{GoalPlanModel>id}" text="{GoalPlanModel>name}"/>
							</items>
						</Select>
					</Toolbar>
				</headerToolbar>
				<items>
					<StandardListItem title="{GoalModel>name}" 
						description="metric: {GoalModel>metric}" 
						info="{GoalModel>id}"
						type="Navigation"
						press="onItemPress"/>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>