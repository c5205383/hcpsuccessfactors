<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:ux="sap.uxap"
	controllerName="hcpsuccessfactors.controller.detail.empCenter.ProfileDetail" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<Page title="Profile of {UsersModel>username}" showNavButton="true" navButtonPress="onNavBack">
			<ux:ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="false" showTitleInHeaderContent="true" showEditHeaderButton="true"
				editHeaderButtonPress="handleEditBtnPress">
				<ux:headerTitle>
					<ux:ObjectPageHeader objectImageURI="data:image/png; base64,{photoModel>/photo}" objectTitle="{UsersModel>defaultFullName}"
						objectImageShape="Square" objectImageAlt="{UsersModel>defaultFullName}" objectSubtitle="{UsersModel>department}, {UsersModel>division}"
						isObjectIconAlwaysVisible="false" isObjectTitleAlwaysVisible="false" isObjectSubtitleAlwaysVisible="false">
						<ux:actions>
							<ux:ObjectPageHeaderActionButton icon="sap-icon://pull-down" text="show section" type="Emphasized"/>
							<ux:ObjectPageHeaderActionButton icon="sap-icon://show" text="show state" type="Emphasized"/>
						</ux:actions>
					</ux:ObjectPageHeader>
				</ux:headerTitle>
				<ux:headerContent>
					<l:VerticalLayout>
						<Link text="{UsersModel>businessPhone}"/>
						<Link text="{UsersModel>email}"/>
					</l:VerticalLayout>
					<!--<l:HorizontalLayout>
						<Image src=""></Image>
						<Image src=""></Image>
					</l:HorizontalLayout>
					<l:VerticalLayout>
						<Label text="Hello! I am Tim and I use UxAP"/>
						<VBox height="63px">
							<Label text="Achieved goals"/>
							<ProgressIndicator percentValue="30" displayValue="30%" showValue="true" state="None"/>
						</VBox>
					</l:VerticalLayout>
					<l:VerticalLayout>
						<Label text="San Jose, USA"/>
					</l:VerticalLayout>-->
				</ux:headerContent>
				<ux:sections>
					<ux:ObjectPageSection title="{i18n>empDetail-sectionOne}">
						<ux:subSections>
							<ux:ObjectPageSubSection title="{i18n>empDetail-sectionOne}">
								<ux:blocks>
									<l:VerticalLayout >
										<HBox alignItems="Start" class="cssHBox">
											<Label text="{i18n>empDetail-fullname}" design="Bold" width="200px" class="sapUiSmallMarginEnd"/>
											<Text text="{UsersModel>defaultFullName}" class="sapUiSmallMarginEnd" textAlign="Begin" maxLines="1"/>
										</HBox>
										<HBox alignItems="Start" class="cssHBox">
											<Label text="{i18n>empDetail-email}" design="Bold" width="200px" class="sapUiSmallMarginEnd"/>
											<Text text="{UsersModel>email}" class="sapUiSmallMarginEnd" textAlign="Begin" maxLines="1"/>
										</HBox>
										<HBox alignItems="Start" class="cssHBox">
											<Label text="{i18n>empDetail-bussinessPhone}" design="Bold" width="200px" class="sapUiSmallMarginEnd"/>
											<Text text="{UsersModel>bussinessPhone}" class="sapUiSmallMarginEnd" textAlign="Begin" maxLines="1"/>
										</HBox>
									</l:VerticalLayout>
								</ux:blocks>
							</ux:ObjectPageSubSection>
						</ux:subSections>
					</ux:ObjectPageSection>
					<ux:ObjectPageSection title="{i18n>empDetail-sectionTwo}" importance="Medium">
						<ux:subSections>
							<ux:ObjectPageSubSection title="{i18n>empDetail-talent-talent}">
								<ux:blocks>
									<Text text="2.1"/>
								</ux:blocks>
							</ux:ObjectPageSubSection>
							<ux:ObjectPageSubSection title="{i18n>empDetail-talent-skill}">
								<ux:blocks>
									<Text text="2.2.1"/>
								</ux:blocks>
								<ux:moreBlocks>
									<Text text="2.2.2"/>
								</ux:moreBlocks>
							</ux:ObjectPageSubSection>
							<ux:ObjectPageSubSection title="{i18n>empDetail-talent-functional}">
								<ux:blocks>
									<Text text="2.3"/>
								</ux:blocks>
							</ux:ObjectPageSubSection>
						</ux:subSections>
					</ux:ObjectPageSection>
					<ux:ObjectPageSection title="Employment">
						<ux:subSections>
							<ux:ObjectPageSubSection title="Job information">
								<ux:blocks>
									<Text text="3.1"/>
								</ux:blocks>
							</ux:ObjectPageSubSection>
							<ux:ObjectPageSubSection title="Employee Details" mode="Collapsed" importance="Medium">
								<ux:blocks>
									<Text text="3.2.1"/>
								</ux:blocks>
								<ux:moreBlocks>
									<Text text="3.2.2"/>
								</ux:moreBlocks>
							</ux:ObjectPageSubSection>
							<ux:ObjectPageSubSection title="Job Relationship" mode="Collapsed" importance="Low">
								<ux:blocks>
									<Text text="3.3"/>
								</ux:blocks>
							</ux:ObjectPageSubSection>
						</ux:subSections>
					</ux:ObjectPageSection>
				</ux:sections>
			</ux:ObjectPageLayout>
		</Page>
	</App>
</mvc:View>