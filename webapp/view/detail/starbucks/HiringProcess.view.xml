<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	controllerName="hcpsuccessfactors.controller.detail.starbucks.HiringProcess" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="{i18n>hiringProcess-title}">
				<content>
					<OverflowToolbar design="Transparent">
						<Title text="{i18n>hiringProcess-title}"/>
						<ToolbarSpacer/>
					</OverflowToolbar>
					<l:VerticalLayout alignItems="Center" class="sapUiResponsiveMargin" width="auto">
						<HBox alignItems="Center" justifyContent="start">
							<Label text="City: " width="8rem"/>
							<Input type="text" width="15rem"/>
							<Button text="" type="Transparent" enabled="false" width="3rem"/>
							<Label text="Store: " width="8rem"/>
							<Input type="text" width="15rem"/>
						</HBox>
						<HBox alignItems="Center" justifyContent="start">
							<Label text="Position: " width="8rem"/>
							<Select width="15rem">
								<items>
									<core:Item key="111" text=""></core:Item>
								</items>
							</Select>
							<Button text="" type="Transparent" enabled="false" width="3rem"/>
							<Label text="Special Rate: " width="8rem"/>
							<Input type="text" width="15rem"/>
						</HBox>
						<HBox alignItems="Center" justifyContent="start">
							<Label text="Chinese Name: " width="8rem"/>
							<Input type="text" width="15rem"/>
							<Button text="" type="Transparent" enabled="false" width="3rem"/>
							<Label text="English Name: " width="8rem"/>
							<Input type="text" width="15rem"/>
						</HBox>
						<HBox alignItems="Center" justifyContent="start">
							<Label text="ID Number: " width="8rem"/>
							<Input type="text" width="15rem"/>
							<Button text="" type="Transparent" enabled="false" width="3rem"/>
							<Label text="Whether hire again: " width="8rem"/>
							<CheckBox text="" width="5rem"/>
						</HBox>
						<HBox alignItems="Center" justifyContent="start">
							<Label text="Employment Type: " width="8rem"/>
							<Select width="15rem">
								<items>
									<core:Item key="111" text=""></core:Item>
								</items>
							</Select>
							<Button text="" type="Transparent" enabled="false" width="3rem"/>
							<Label text="Employee Type: " width="8rem"/>
							<Select width="15rem">
								<items>
									<core:Item key="111" text=""></core:Item>
								</items>
							</Select>
						</HBox>
						<HBox alignItems="Center" justifyContent="start">
							<Label text="Payroll Suggestion: " width="8rem"/>
							<Input type="text" width="15rem"/>
							<Button text="" type="Transparent" enabled="false" width="3rem"/>
							<Label text="Start Date: " width="8rem"/>
							<DatePicker width="15rem"/>
						</HBox>
						<HBox alignItems="Center" justifyContent="start">
							<Label text="Do not hire: " width="8rem"/>
							<CheckBox text="" width="5rem" select="onCheckBoxPressed"/>
						</HBox>
						<HBox alignItems="Center" justifyContent="start" id="reason">
							<Label text="Reason: " width="8rem"/>
							<Input type="text" width="41rem"/>
						</HBox>
						<HBox alignItems="Center" justifyContent="start">
							<Button text="Add to table"/>
						</HBox>
						<HBox alignItems="Center" justifyContent="start">
							<Table text="" width="100%">
								<columns>
									<Column width="13%">
										<Text text="Whether hire again"/>
									</Column>
									<Column>
										<Text text="City"/>
									</Column>
									<Column>
										<Text text="Store"/>
									</Column>
									<Column>
										<Text text="Position"/>
									</Column>
									<Column width="9%">
										<Text text="Employment Type"/>
									</Column>
									<Column width="8%">
										<Text text="Chinese Name"/>
									</Column>
									<Column width="8%">
										<Text text="English Name"/>
									</Column>
									<Column width="9%">
										<Text text="ID Number"/>
									</Column>
									<Column width="9%">
										<Text text="Employee Type"/>
									</Column>
									<Column width="9%">
										<Text text="Payroll Suggesstion"/>
									</Column>
									<Column width="9%">
										<Text text="Special Rate"/>
									</Column>
									<Column width="9%">
										<Text text="Start Date"/>
									</Column>
								</columns>
							</Table>
						</HBox>
						<HBox alignItems="Center" justifyContent="start">
							<Button text="Submit"/>
						</HBox>
					</l:VerticalLayout>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>