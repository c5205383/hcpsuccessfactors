<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:l="sap.ui.layout"
	controllerName="hcpsuccessfactors.controller.detail.starbucks.MyShop" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page id="myshoppage" title="{i18n>myShop-title}">
		<content>
			<List items="{/dataObj/}">
				<headerToolbar>
					<Toolbar class="sapUiSmallMargin">
						<content>
							<Title text="{i18n>myShop-title}" level="H2"/>
							<ToolbarSpacer/>
							<Select id="myshopSelector" change="onChange">
								<items>
									<core:Item key="1" text="Active"/>
									    <core:Item key="2" text="Inactive"/>
								</items>
							</Select>
							<Button icon="sap-icon://add-contact" press="onPress">
								<layoutData>
									<OverflowToolbarLayoutData priority="NeverOverflow"/>
								</layoutData>
							</Button>
						</content>
					</Toolbar>
				</headerToolbar>
				<items class=".sapMListUl">
					<StandardListItem title="Name:{defaultFullName}" info="Position: {title}" press="onPressed" type="Navigation"/>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>