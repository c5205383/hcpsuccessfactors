<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="hcpsuccessfactors.controller.detail.starbucks.ApprovalList"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page navButtonPress="navBack" showNavButton="true" title="{i18n>workflow-title}">
				<content>
					<Table inset="false" items="{path:'WorkFlow>/dataObj'}">
						<headerToolbar>
							<Toolbar>
								<content>
									<Title text="{i18n>workflow-list-title}" level="H2" />
									<ToolbarSpacer />
									<Select width="30%" id="eventReasonSelector" change="onSelectKeyChange" items="{path:'EventReason>/dataObj'}">
										<items>
											<core:Item key="{EventReason>externalCode}" text="{EventReason>name} ( {EventReason>externalCode} )" />
										</items>
									</Select>
									<Button icon="sap-icon://refresh" press="onRefreshPressed">
										<layoutData>
											<OverflowToolbarLayoutData priority="NeverOverflow" />
										</layoutData>
									</Button>
								</content>
							</Toolbar>
						</headerToolbar>
						<columns>
							<Column  design="bold">
								<Text text="Requested By" />
							</Column>
							<Column design="bold">
								<Text text="Requested For" />
							</Column>
							<Column design="bold">
								<Text text="Request Type" />
							</Column>
							<Column design="bold">
								<Text text="Request Status" />
							</Column>
							<Column hAlign="Right">
								<Text text="Actions" />
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Text text="{WorkFlow>createdBy}" />
									<Text text="{WorkFlow>wfRequest/0/empWf/subjectId}" />
									<Text text="{WorkFlow>wfRequest/0/empWf/requestType}" />
									<Text text="{WorkFlow>status}" />
									<Text text="{}" />
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer />
						<Button text="{i18n>workflow-requst-approve}" type="Accept" />
						<Button text="{i18n>workflow-requst-reject}" type="Reject" />
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>