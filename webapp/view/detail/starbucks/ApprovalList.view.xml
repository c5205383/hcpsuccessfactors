<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="hcpsuccessfactors.controller.detail.starbucks.ApprovalList"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page navButtonPress="navBack" showNavButton="true" title="{i18n>workflow-title}">
				<content>
					<List items="{path:'EventReason>/dataObj'}">
						<headerToolbar>
							<Toolbar>
								<content>
									<Title text="{i18n>workflow-list-title}" level="H2" />
									<ToolbarSpacer />
									<Select width="30%" id="idGoalPlanSelector" change="onSelectKeyChange" items="{path:'EventReason>/dataObj'}">
										<items>
											<core:Item key="{EventReason>event}" text="{EventReason>name} ( {EventReason>externalCode} )" />
										</items>
									</Select>
									<Button icon="sap-icon://refresh" press="onRefreshPressed">
										<layoutData>
											<OverflowToolbarLayoutData priority="NeverOverflow" />
										</layoutData>
									</Button>
								</content>
							</Toolbar>
						</headerToolbar>
						<items>
							<StandardListItem title="{numbering} {name}" description="Metric:{metric}" info="ID: {id}" press="onPressed" type="Active" />
						</items>
					</List>
					<FlexBox id="flexBox" width="100%" height="50%" alignItems="Center" justifyContent="Center" visible="false">
						<items>
							<BusyIndicator id="audioBusyIndicator" visible="true" />
						</items>
					</FlexBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>